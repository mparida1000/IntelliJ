public class Solution {
    public static String reverseWords(String A) {
        List<String> words = new List<String>();
        Integer length = A.length();
        Integer start = 0;
        Integer end = 0;

        // Traverse the input string character by character
        while (end < length) {
            // Find the start position of the word
            while (start < length && A.charAt(start) == ' ') {
                start++;
            }            
            // Find the end position of the word
            end = start;
            while (end < length && A.charAt(end) != ' ') {
                end++;
            }            
            // Extract the word and add it to the list
            if (start < end) {
                words.add(A.substring(start, end));
                start = end;
            }
        }
        // Reverse the order of words
        List<String> reversedWords = new List<String>();
        for (Integer i = words.size() - 1; i >= 0; i--) {
            reversedWords.add(words[i]);
        }

        // Join reversed words with a single space
        String reversedString = String.join(reversedWords, ' ');
        return reversedString;
    }
}
